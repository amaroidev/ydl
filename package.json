{
  "name": "roitube",
  "version": "2.1.0",
  "description": "A powerful YouTube downloader by roidev",
  "main": "src/main/main.js",
  "author": "roidev",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.roidev.roitube",
    "productName": "RoiTube",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*"
    ],
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RoiTube"
    },
    "portable": {
      "artifactName": "RoiTube-Portable.exe"
    }
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "yt-dlp-wrap": "^2.3.12"
  }
}
